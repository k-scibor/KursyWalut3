<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KursyWalut.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Picker
                x:Name="picker"
                Title="wybierz walutę">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>USD</x:String>
                        <x:String>GBP</x:String>
                        <x:String>EUR</x:String>
                        <x:String>JPY</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            <Button 
                Clicked="wyswietl"
                Text="Przelicz"/>
            <Label
                x:Name="kupno">
            </Label>
            <Label
                x:Name="sprzedaz">
            </Label>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
